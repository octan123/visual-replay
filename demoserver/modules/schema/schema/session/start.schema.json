{
  "id": "https://xviz.org/schema/session/start.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "XVIZ Session Start",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(-(0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(\\.(0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*)?(\\+[0-9a-zA-Z-]+(\\.[0-9a-zA-Z-]+)*)?$"
    },
    "profile": {
      "type": "string"
    },
    "session_type": {},
    "message_format": {
      "type": "string",
      "enum": [
        "JSON",
        "BINARY"
      ]
    },
    "log": {
    }
  },
  "required": [
    "version"
  ],
  "oneOf": [
    {
      "properties":  {
        "session_type": {
          "type": "string",
          "enum": [
            "LOG"
          ]
        },
        "log": {
          "pattern": ".*"
        }
      },
      "required": [
        "version",
        "log"
      ]
    },
    {
      "properties":  {
        "session_type": {
          "type": "string",
          "enum": [
            "LIVE"
          ]
        }
      },
      "required": [
        "version"
      ],
      "not": { "required": [ "log" ] }
    }
  ],
  "additionalProperties": false
}
